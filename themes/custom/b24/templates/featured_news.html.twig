<!-- Featured News Slider Start -->
{% if featured_nodes is defined and featured_nodes is not empty %}
    <div class="container-fluid pt-5 mb-3">
        <div class="container">
            <div class="section-title">
                <h4 class="m-0 text-uppercase font-weight-bold">{{'Featured News'|t}}</h4>
            </div>
            <div class="owl-carousel news-carousel carousel-item-4 position-relative">
                {% for item in featured_nodes %}
                    {% if item.news.field_news_image is defined and item.news.field_news_image is not empty %}
                        <div class="position-relative overflow-hidden" style="height: 300px;">
                            <img class="img-fluid h-100" src="{{item.news.field_news_image|file_url}}" style="object-fit: cover;">
                            <div class="overlay">
                                <div class="mb-2">
                                    {% if item.news.field_entertainment_category is defined and item.news.field_entertainment_category is not empty %}
                                        {% set category = item.news.field_entertainment_category.0.entity.name.value|t %}
                                    {% elseif item.news.field_event_type is defined and item.news.field_event_type is not empty %}
                                        {% set category = item.news.field_event_type.0.entity.name.value|t %}
                                    {% elseif item.news.field_sport_category is defined and item.news.field_sport_category is not empty %}
                                        {% set category = item.news.field_sport_category.0.entity.name.value|t %}
                                    {% elseif item.news.field_news_category is defined and item.news.field_news_category is not empty %}
                                        {% set category = item.news.field_news_category.0.entity.name.value|t %}
                                    {% else %}
                                        {% set category = '' %}
                                    {% endif %}
                                    <a class="badge badge-primary text-uppercase font-weight-semi-bold p-1 mr-1"
                                        href="">{{ category }}</a>
                                    <!-- <a class="text-white" href=""><small>{{ item.news.created.value|date('F j, Y') }}</small></a> -->
                                </div>
                                <a class="m-0 text-white text-uppercase font-weight-semi-bold" href="{{base_path}}{{ path('entity.node.canonical', {'node': item.news.nid.value}) }}" style="font-size: 12px;">{{ item.news.title.value|t }}</a>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
    <!-- Featured News Slider End -->